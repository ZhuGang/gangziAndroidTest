<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#efefef" />

            <stroke android:width="0.5dp" android:color="#efefef" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0.5dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#efefef" />

            <stroke android:width="0.5dp" android:color="#efefef" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0.5dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />

            <stroke android:width="0.5dp" android:color="@color/white" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0.5dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>

</selector>